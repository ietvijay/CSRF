@using System.Web.Mvc.Html
@using CrossSiteScriptingAttack.Models
@model Account


@{
    ViewBag.Title = "Index";
   
}

<h2>Index</h2>


@using (Html.BeginForm("ProcessTransferSecured", "Account", FormMethod.Post))
{
   <input type="hidden" id="Token" name="Token" value="@ViewBag.Token"/>

    @Html.ValidationSummary(true)
    <div class="form-group">

        @Html.LabelFor(x => x.Amount) 
        @Html.TextBoxFor(x => x.Amount,
       new { @class="form-control",@autocomplete="off",@autofocus=""})
        @Html.ValidationMessageFor(model => model.Amount,"Amount kon dalega?", new { @class = "text-danger" })
    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.TransferTo) 
        @Html.TextBoxFor(x => x.TransferTo,new { @class="form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(m=>m.TransferTo,"kissko transfer karo?", new { @class = "text-danger" })
    </div>
 
  <input  type="submit" value="Sumbit" class="btn btn-default text-right"/>

  
}

